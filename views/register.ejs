<%- include('layouts/header.ejs') %>

<style>
/* Styles to match the signup design */
body {
    background-color: #0a192f;
    font-family: Arial, sans-serif;
}

.signup-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
}

.signup-box {
    display: flex;
    background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
    width: 850px;
    height: 450px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0px 0px 15px rgba(0, 255, 255, 0.2);
    color: white;
    position: relative;
}

.welcome-section {
    flex: 1;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #152238;
    text-align: center;
}

.welcome-section h1 {
    font-size: 2.5rem;
    font-weight: bold;
    color: #00ffff;
}

.welcome-section p {
    font-size: 0.9rem;
    color: #b0bec5;
    margin-top: 10px;
}

.form-section {
    flex: 1;
    background-color: #1e2a38;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.form-section h2 {
    font-size: 1.8rem;
    font-weight: bold;
    color: #00ffff;
    margin-bottom: 20px;
    text-align: center;
}

.form-field {
    position: relative;
    margin-bottom: 20px;
}

.form-field label {
    font-size: 0.9rem;
    color: #cfd8dc;
}

.form-field input {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 5px;
    background: #0f2027;
    color: white;
    outline: none;
}

.form-field input::placeholder {
    color: #cfd8dc;
}

.webrtc-login {
    width: 100%;
    padding: 12px;
    background: linear-gradient(to right, #00d2ff, #3a7bd5);
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    transition: 0.3s;
    font-weight: bold;
}

.webrtc-login:hover {
    background: linear-gradient(to right, #3a7bd5, #00d2ff);
}

.alt-option {
    text-align: center;
    margin-top: 15px;
    color: #b0bec5;
}

.alt-option a {
    color: #00d2ff;
    text-decoration: underline;
}

.icon-field {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    right: 10px;
    color: #cfd8dc;
    font-size: 1.2rem;
}
</style>

<div class="signup-container">
    <div class="signup-box">
        <div class="welcome-section">
            <h1>WELCOME BACK!</h1>
          
        </div>
        <div class="form-section">
            <h2>Sign Up</h2>
            <form action="" method="POST">
                <div class="form-field">
                    <label for="name">Username</label>
                    <input type="text" name="name" id="name" placeholder="" required>
                    <i class="icon-field fas fa-user"></i>
                </div>
                <div class="form-field">
                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" placeholder="" required>
                    <i class="icon-field fas fa-envelope"></i>
                </div>
                <div class="form-field">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" placeholder="" required>
                    <i class="icon-field fas fa-lock"></i>
                </div>
                <button type="submit" class="webrtc-login">Sign Up</button>
                <p class="alt-option">Already have an account? <a href="/">Login</a></p>
            </form>
            <% 
                if (typeof success !== 'undefined') {
                    if (success) {
            %>
                <p style="color: green;"><%= message %></p>
            <% 
                    } else {
            %>
                <p style="color: red;"><%= message %></p>
            <% 
                    }
                }
            %>
        </div>
    </div>
</div>

<%- include('layouts/footer.ejs') %>
