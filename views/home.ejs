<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StreamHub - Home</title>
    <link
      rel="icon"
      type="image/x-icon"
      href="https://img.icons8.com/?size=100&id=YOhdE1LDn243&format=png&color=000000"
    />
    <style>
      /* General Styles */
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #0d1117;
        color: #c9d1d9;
      }

      /* Navbar */
      .navbar {
        width: 100%;
        background-color: #161b22;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px;
        position: absolute;
        top: 0;
      }

      .navbar img {
        height: 40px;
        width: auto;
      }

      .navbar a {
        color: #58a6ff;
        text-decoration: none;
        padding: 14px 20px;
      }

      .navbar a.active {
        background-color: #21262d;
        border-radius: 5px;
        color: #c9d1d9;
      }

      .navbar a:hover {
        background-color: #21262d;
        border-radius: 5px;
        color: #58a6ff;
      }

      .logout-btn {
        padding: 10px 20px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }

      .logout-btn:hover {
        background-color: #b32d37;
      }

      /* Container */
      .container {
        text-align: center;
        background-color: #21262d;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 400px;
      }

      h1 {
        color: #58a6ff;
        font-size: 24px;
        margin-bottom: 20px;
      }

      .form-group label {
        color: #c9d1d9;
      }

      .form-group input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        margin-bottom: 20px;
        border: none;
        border-radius: 5px;
        background-color: #0d1117;
        color: #c9d1d9;
      }

      .form-group button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #58a6ff;
        color: white;
        cursor: pointer;
        font-size: 16px;
      }

      .form-group button:hover {
        background-color: #4791db;
      }

      .divider {
        color: #c9d1d9;
        margin: 20px 0;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <div>
        <!-- StreamHub Logo (replace the src with the actual logo URL) -->
        <img src="https://img.icons8.com/ios-filled/50/ffffff/video-conference.png" alt="StreamHub Logo" />
      </div>
      <div>
        <a href="/home" class="active">Home</a>
        <a href="/chat">Chat</a>
      </div>
      <button class="logout-btn">
        <a href="/logout" style="text-decoration: none; color: white;">Logout</a>
      </button>
    </div>

    <div class="container">
      <h1>Welcome to StreamHub</h1>
      <div class="form-container">
        <div class="form-group">
          <label for="room-code">Enter Room Code</label>
          <input type="text" id="room-code" placeholder="Room Code" />
          <button id="join-room">Join Room</button>
        </div>
        <div class="divider">OR</div>
        <div class="form-group">
          <button id="create-room">Create New Room</button>
        </div>
      </div>
    </div>

    <script>
      document.getElementById("join-room").addEventListener("click", () => {
        const roomCode = document.getElementById("room-code").value;
        if (roomCode) {
          window.location.href = `/${roomCode}`;
        } else {
          alert("Please enter a room code.");
        }
      });

      document.getElementById("create-room").addEventListener("click", () => {
        window.location.href = "/create";
      });
    </script>
  </body>
</html>
